@model AdAtTheRightTime.Models.Business
@{
    ViewBag.Title = "AddBusinesses";
}

<h2>Add a Business</h2>

@using (Html.BeginForm())
{
<div class="form-group">
    @Html.Label("Choose a Business", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownList("Business", (SelectList)ViewBag.Name, " ")
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




