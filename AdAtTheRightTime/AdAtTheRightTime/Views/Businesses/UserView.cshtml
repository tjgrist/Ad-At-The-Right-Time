@using Microsoft.AspNet.Identity
@model AdAtTheRightTime.Models.Business

@{
    ViewBag.Title = "UserView";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Description)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Industry)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Industry)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Promotion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Promotion)
        </dd>

    </dl>
</div>
@if (Request.IsAuthenticated)
{
    <div>
        @Html.ActionLink("Back to your page", "UserView", "Users") |
        @Html.ActionLink("Like  " + Model.Name, "CreateRelationship", "Relationships", new {id = Model.BusinessId}, null)
    </div>
}
else
{
    <div>
        @Html.ActionLink("Log in to Like this Business", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </div>
}

